<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activity.admin.DetailVideo"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:id="@+id/detail_media_player"
            app:show_timeout="2000"
            app:resize_mode="fit"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="220dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/image_love"
        tools:ignore="ContentDescription" />
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:text="90"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-35dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/detail_jumlah_love"
        app:layout_constraintTop_toBottomOf="@id/image_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintTop_toBottomOf="@+id/detail_jumlah_love"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/detail_image_view"
        tools:ignore="ContentDescription" />
    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:text="90"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-30dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/detail_jumlah_view"
        app:layout_constraintTop_toBottomOf="@id/detail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <ImageView
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:id="@+id/detail_image_koment"
        android:src="@drawable/ic_baseline_mode_comment_24"
        app:layout_constraintTop_toBottomOf="@id/detail_jumlah_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/detail_jumlah_komen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="90"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_image_koment"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>