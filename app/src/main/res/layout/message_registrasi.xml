<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.MessageRegistrasi"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">
            <ImageView
                android:layout_width="250dp"
                android:src="@drawable/emot_ok_v2"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:text="Terima kasih telah melakukan pendaftaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"

                android:layout_margin="10dp"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="-30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Silakan masukan foto profil jika tidak sekarang anda bisa klik lewati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:id="@+id/foto_profil"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/background_no_media"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/upload"
                    android:text="Upload Foto"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/corner_for_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lewati"
                        android:text="Lewati"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:background="@drawable/corner_for_btn"
                        android:backgroundTint="@color/purple_700"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>