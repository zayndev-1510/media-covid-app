<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:orientation="vertical"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:background="@drawable/background_header_pengguna"
           android:layout_height="300dp"
           tools:ignore="ExtraText">
           <ImageView
               android:src="@drawable/virus"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_marginTop="-250dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="match_parent"
                   android:id="@+id/image_pengguna"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center"
                   android:elevation="3dp"
                   android:src="@drawable/wear_mask"
                   android:layout_height="200dp"/>
           </LinearLayout>
       </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"

                android:fontFamily="@font/poppins_medium"
                android:text="Nama Lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <TextView
                android:textSize="13sp"
                android:padding="10dp"
                android:id="@+id/nama_lengkap_pengguna"
                android:fontFamily="@font/poppins_medium"
                android:text="Zayn Malik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </LinearLayout>
       <View
           android:background="#CCC"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="13sp"
               android:fontFamily="@font/poppins_medium"
               android:text="Alamat"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />
           <TextView
               android:textSize="13sp"
               android:padding="10dp"
               android:id="@+id/alamat_pengguna"
               android:fontFamily="@font/poppins_medium"
               android:text="Jln Ahmad Yani"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />
       </LinearLayout>
       <View
           android:background="#CCC"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="13sp"
               android:fontFamily="@font/poppins_medium"
               android:text="Nomor Telepon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />

           <TextView
               android:textSize="13sp"
               android:padding="10dp"
               android:id="@+id/nomor_handphone_pengguna"
               android:fontFamily="@font/poppins_medium"
               android:text="082271586923"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />
       </LinearLayout>
       <View
           android:background="#CCC"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textSize="13sp"

               android:fontFamily="@font/poppins_medium"
               android:text="Nama Pengguna"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />

           <TextView
               android:textSize="13sp"
               android:padding="10dp"
               android:id="@+id/username_pengguna"
               android:fontFamily="@font/poppins_medium"
               android:text="Zayn1510"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="HardcodedText" />
       </LinearLayout>
       <View
           android:background="#CCC"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>
       <TextView
           android:layout_marginTop="30dp"
           android:padding="10dp"
           android:textSize="15sp"
           android:id="@+id/keluar_akun"
           android:textColor="@color/white"
           android:textAlignment="center"
           android:layout_marginEnd="10dp"
           android:layout_marginStart="10dp"
           android:background="@drawable/corner_for_btn"
           android:text="Keluar Akun"
           android:fontFamily="@font/poppins_medium"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="HardcodedText" />
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>