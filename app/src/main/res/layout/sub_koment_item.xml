<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="Luffydono"
        android:id="@+id/nama_lengkap_komentar_sub"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView

        android:textSize="13sp"
        android:id="@+id/komentar_user_sub"
        android:fontFamily="@font/poppins_medium"
        android:text="Terima kasih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="3 Menit Yang Lalu"
            android:textSize="12sp"
            android:id="@+id/waktu_komentar_sub"
            android:fontFamily="@font/poppins_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/reply_sub"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Balas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>